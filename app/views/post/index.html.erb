 <% if user_signed_in?%>
  <%= render partial: 'story/story',locals: {story: @stories} %>
  <div class="container">
    <div class="row">
      <div class="col-6 ">
        <%= render partial: 'index', collection: @posts, as: :post %>
      </div>    
      <div class="col-6">
        <div class="container mt-5 d-flex justify-content-center profile">
          <div class="container mt-5 d-flex justify-content-center profile">
            <div class="card p-3">
              <div class="d-flex align-items-center">
                <div class="image">
                 <h1>Friend Requests</h1>
                 <% if @users_requests != nil %>
                  <% @users_requests.each do |request| %>
                    <div class="ml-3 w-100">
                      <h6><%= request.firstname%> sends you friend request</h6>
                      <div class="button mt-2 d-flex flex-row align-items-center"> 
                        <%= link_to "accept request",  follower_path(request.id), method: :patch ,class: "btn btn-primary" %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>             
            </div>
          </div>
        </div>             
      </div>                 
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <h1>kindly sign in </h1>
    </div>     
  </div>  
<% end %>    